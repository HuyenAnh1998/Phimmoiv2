package controller;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.sun.net.httpserver.HttpServer;

import dao.UserDAO;
import entity.Comment;
import entity.Response;
import entity.User;

@WebServlet("/update-response")
public class UserUpdateResponseController extends HttpServlet {
	private static final long serialVersionUID = 1L;

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		resp.setContentType("text/html;charset=UTF-8");
		req.setCharacterEncoding("UTF-8");

		Response res = new Response(0, req.getParameter("content"), Long.getLong(req.getParameter("user_id")),
				Integer.parseInt("comment_id"), req.getParameter("time"),null, Integer.parseInt(req.getParameter("phim_id")));

		HttpSession session = req.getSession();
		User user = (User) session.getAttribute("user");

		if (user != null) {
			new UserDAO().updateResponse(res);
			resp.sendRedirect("detail?id=" + res.getPhim_id());

		} else {
			resp.sendRedirect("detail?id=" + res.getPhim_id());
		}
	}

}
